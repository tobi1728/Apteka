<local:OneViewBase x:Class="MVVMFirma.Views.NewScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid Background="#fff">
        <Grid.RowDefinitions>
            <!-- Nagłówek -->
            <RowDefinition Height="Auto"/>
            <!-- Formularz -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" Text="Dodaj nowy grafik" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Margin="5,10,0,10"/>

        <!-- Główna siatka dla formularza -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <!-- Farmaceuta -->
            <Label Grid.Column="0" Grid.Row="0" Content="Farmaceuta:" Margin="0,8,0,8" Padding="3"/>
            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding PharmacistName, Mode=TwoWay}" IsEnabled="False" Margin="0,8,0,8" Padding="3"/>
            <Button Content="Wybierz" Grid.Column="2" Grid.Row="0" Margin="10,8,-10,8" Command="{Binding ShowPharmacists}" />



            <!-- Data -->
            <Label Grid.Column="0" Grid.Row="1" Margin="0,8,0,8" Content="Data:"/>
            <DatePicker Grid.Column="1" Grid.Row="1" Margin="0,8,0,8"
                        SelectedDate="{Binding Data, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Godzina rozpoczęcia -->
            <Label Grid.Column="0" Grid.Row="2" Margin="0,8,0,8" Content="Godzina rozpoczęcia:"/>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="0,8,0,8" Padding="5"
                     Text="{Binding GodzinaRozpoczecia, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Godzina zakończenia -->
            <Label Grid.Column="0" Grid.Row="3" Margin="0,8,0,8" Content="Godzina zakończenia:"/>
            <TextBox Grid.Column="1" Grid.Row="3" Margin="0,8,0,8" Padding="5"
                     Text="{Binding GodzinaZakonczenia, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Grid>
</local:OneViewBase>
