<local:AllViewBase x:Class="MVVMFirma.Views.AllPrescriptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVMFirma.Views">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID_Recepty}"/>
                <DataGridTextColumn Header="Pacjent" Binding="{Binding PatientName}"/>
                <DataGridTextColumn Header="Farmaceuta" Binding="{Binding PharmacistName}"/>
                <DataGridTextColumn Header="Data wystawienia" Binding="{Binding Data_Wystawienia, StringFormat=d}"/>
                <DataGridTextColumn Header="Data realizacji" Binding="{Binding Data_Realizacji, StringFormat=d}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
